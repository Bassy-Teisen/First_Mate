<h1>Profiles</h1>

<p><%= link_to 'New Profile', new_profile_path %></p>
<p><%= link_to 'Boats page', boats_path %></p>

<%= link_to 'Sign In', user_session_path %>
<% if user_signed_in? %>
<p><%= link_to 'New Profile', new_profile_path %></p>
<% end %>

<table>
    <% @profiles.each do |pro|%>
    <tr>
        <td><%= link_to pro.name, profile_path(pro.id) %></td>         
        <td>Has a: <%= pro.boat %></td>                     
    </tr>
    <% end %>
</table>