<h1>Parrrrr</h1>

<%= form_with model: @profile do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </p>
    <p>
        <%= f.label :profile_image %>
        <%= f.file_field :profile_image %>
    </p>
    <p>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
    </p>
    <p>
        <%= f.submit caption %>
    </p>
<% end %>

<%= link_to "<< Back to Profiles!", profiles_path %>