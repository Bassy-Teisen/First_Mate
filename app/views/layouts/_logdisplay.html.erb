<section id="valdisplay">
    <% if user_signed_in? %>
        <%= current_user.email %>
        |
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        <% if current_user.profile.nil? %>
        <% else %>
            <p>Profile: <%= current_user.profile.name %></p>
        <% end %>
    <% else %>
        <h1>
            Login 
            <small class="text-muted">or Sign Up Below</small>
        </h1>

        <%
=begin%>
 <div class="btn-group">
            <%= link_to "Login", new_user_session_path, class: "btn btn-primary active" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
        </div> 
<%
=end%>

        <%= link_to "Login", new_user_session_path %>
        |
        <%= link_to "Sign Up", new_user_registration_path %>
    <% end %>
</section>